<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_design"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fNameTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Full name"
            android:drawablePadding="3dp"
            android:textStyle="bold"
            android:textColor="#FAF8F8"
            android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/mobNameTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_phone"
            android:text="mob num"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:textColor="#F4F2F2"
            android:textSize="20sp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressTVRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="address"
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/nextDonDayRVTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DaysLeft"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_dd"
            android:layout_weight="1"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>